{{outlet}}
<div class="jumbo">
  <h3>{{model.name}}</h3>
    <div class="detail daily_rate">
      <span>Daily Rate:</span> ${{model.daily_rate}}
    </div>
    <p></p>
    <p>
      <form {{action "bookRental" model on="submit"}}>
        {{input data-test-email value=email placeholder="User Email"}} <div class="form-error">{{validationErrors.email}}</div>
        <br/><br/>
        <p>
        {{bootstrap-datepicker data-test-start-at value=start_at placeholder="Start At" class="input-short" format="yyyy-mm-dd"}} <div class="form-error">{{validationErrors.start_at}}</div>
        <br/>
        {{bootstrap-datepicker data-test-end-at value=end_at placeholder="End At" class="input-short" format="yyyy-mm-dd" focus-in=(action "updatePrice")}} <div class="form-error">{{validationErrors.end_at}}</div>
        </p> 
        <p></p>
        <button class="app-button" data-test-book-rental>Make Reservation</button>
        <p></p>
        <div id="price"></div>      
      </form>
    </p>

</div>


