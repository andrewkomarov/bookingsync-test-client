{{outlet}}
<div class="jumbo">
  <h3>Rentals List</h3>

  {{#each model as |rental|}}
  <article class="listing" data-test-list-rentals>
    <h3>{{#link-to "edit-rental" rental}} {{rental.name}} {{/link-to}}</h3>
    <div class="detail name">
      <span>Name:</span> {{#link-to "edit-rental" rental}} {{rental.name}} {{/link-to}}
    </div>
    <div class="detail daily_rate">
      <span>Daily Rate: </span>${{rental.daily_rate}}
    </div>
    <div class="detail remove-rental">
      <span>

      {{#if rental.isTestRental}}
         <a data-test-rental-id=rental.id {{action "removeRental" rental}} href="#">Remove</a>
      {{else}}
         <a {{action "removeRental" rental}} href="#">Remove</a>
      {{/if}}

      </span>
    </div>
    <div class="detail list-bookings green-link">
      <span>{{#link-to "list-bookings" rental}} View Bookings {{/link-to}}</span>
    </div>
  </article>
  <hr/>
  {{/each}}

</div>
